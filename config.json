{
    "port": 5001,
    "ffmpegPath": "/bin/ffmpeg",
    "ffmpegLogSize": 200,
    "defaultOptions": {
        "respawnDelay": 5,
        "respawnOnExit": true,
        "respawnOnError": true,
        "outputArgs": [
            "-q:v", "1",
            "-an"
        ]
    },
    "streams": [
        {
            "disabled": false,
            "name": "cam",
            "input": "/dev/video0"
        },
        {
            "inputArgs": ["-re"],
            "respawnDelayExit": 0,
            "name": "Big Buck Bunny Example",
            "input": "https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4"
        }
    ]
}